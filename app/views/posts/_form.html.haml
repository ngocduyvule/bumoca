= form_for @post, remote: true do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :bloc_id
  .field
    = f.label :title
    = f.text_field :title
  = f.fields_for :note do |n|
    .field
      = n.label :text
      = n.text_area :text, cols: 55, rows: 5
  .actions
    = f.submit 'Save'
